@inject IHttpContextAccessor contxt
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tranning_Apps_Management</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tranning_Apps_Management.styles.css" asp-append-version="true" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body-tertiary" style="box-shadow:0 8px 6px -6px #999">
          <!-- Container wrapper -->
          <div class="container-fluid">
            <!-- Toggle button -->
            <button
              data-mdb-collapse-init
              class="navbar-toggler"
              type="button"
              data-mdb-target="#navbarSupportedContent"
              aria-controls="navbarSupportedContent"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <!-- Navbar brand -->
                    <a class="navbar-brand mt-2 mt-lg-0" asp-action="Index" asp-controller="home">
                        <img src="~/imgs/art-logo-rgb-bl.jpg" 
                  height="15"
                />
              </a>
              <!-- Left links -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                            <a class="nav-link" asp-action="UserInf" asp-controller="UserManage" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><b>Users Inf</b></a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-action="Courses" asp-controller="UserManage" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><b>Courses</b></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><b>Aministrator</b></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-header"><b>User management</b></li>
                            <li><a class="dropdown-item" href="/UsersAdmin/UsersManage" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><i>Users list</i></a></li>
                            <li><a class="dropdown-item" href="/UsersAdmin/GroupManage" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><i>Users Group</i></a></li>
                            <li><a class="dropdown-item" href="/UsersAdmin/DepartmentManage" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><i>Departments list</i></a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li class="dropdown-header"><b>Course management</b></li>
                            <li><a class="dropdown-item" href="#" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><i>Trainning Document</i></a></li>
                            <li><a class="dropdown-item" href="#" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><i>Operation List</i></a></li>
                            <li><a class="dropdown-item" href="#" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><i>Trainning Plan</i></a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li class="dropdown-header"><b>Others</b></li>
                            <li><a class="dropdown-item" href="#" data-bs-toggle="@ViewBag.toggle" data-bs-target="@ViewBag.target"><i>Work Station</i></a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><b>Reports</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Contact" asp-controller="Orthers"><b>Contact</b></a>
                    </li>
                </ul>
              <!-- Left links -->
            </div>
            <!-- Collapsible wrapper -->

            <!-- Right elements -->
            <div class="d-flex align-items-center">
              <!-- Icon -->
              <a class="text-reset me-3" href="#">
                <i class="fas fa-shopping-cart"></i>
              </a>

              <!-- Notifications -->
              <!-- Avatar -->
              <div class="dropdown">
                <a
                  data-mdb-dropdown-init
                  class="dropdown-toggle d-flex align-items-center hidden-arrow"
                  href="#"
                  id="navbarDropdownMenuAvatar"
                  role="button"
                  aria-expanded="false"
                  data-bs-toggle="dropdown">
                  <img src="~/imgs/icons8-user-48.png"
                    class="rounded-circle"
                    height="35"
                    alt="Black and White Portrait of a Man"
                    loading="lazy"
                  />
                </a>
                <ul
                  class="dropdown-menu dropdown-menu-end"
                  aria-labelledby="navbarDropdownMenuAvatar"
                >
                  <li>
                    <a class="dropdown-item" href="#">My profile</a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="#">Settings</a>
                  </li>
                  <li>
                    <a class="dropdown-item" asp-action="Logout" asp-controller="home">Logout</a>
                  </li>
                </ul>
            </div>
                @if (contxt.HttpContext != null)
                {
                    @if (contxt.HttpContext.Session.GetString("Usname") == null)
                    {
                        <a class="dropdown-item" id="lblusname" asp-action="Signup" asp-controller="home" ><b>Register</b></a>
                    }
                    else
                    {
                        <a class="dropdown-item" id="lblusname" href="#"><b>@contxt.HttpContext.Session.GetString("Usname")</b></a>
                    }

                }
            </div>
            <!-- Right elements -->
          </div>
          <!-- Container wrapper -->
        </nav>
        <!-- Navbar -->
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <div class="card-footer">
        <footer class="bg-body-tertiary text-center text-lg-start" style="height:0px">
            <!-- Grid container -->
            <div class="container">
                <!--Grid row-->
                <div class="row">
                    <!--Grid column-->
                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase"><b>Medtronic</b></h5>

                        <p>
                            Medtronic plc is an American medical device company. The company's operational and executive headquarters are in Minneapolis, Minnesota, and its legal headquarters are in Ireland due to its acquisition of Irish-based Covidien in 2015
                        </p>
                    </div>
                    <!--Grid column-->
                    <!--Grid column-->
                    <div class="col-lg-6 col-md-12 mb-4 mb-md-0">
                        <h5 class="text-uppercase"><b>Headquarters</b></h5>

                        <p>
                            <b>Address :</b> Street 14, Tan Thuan Export Processing Zone, Tan Thuan Dong Ward, District 7,Ho Chi Minh, Vietnam.
                            <br />
                            <b>Opening :</b> 9.00 a.m. to 5.30 p.m. Monday to Friday
                            <br />
                            <b>Tel :</b> +84 28 3770 0881
                        </p>
                    </div>
                    <!--Grid column-->
                </div>
                <!--Grid row-->
            </div>
            <!-- Grid container -->
            <!-- Copyright -->
            <div class="row">
                <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.05);">
                    <div class="container">
                        <img src="~/imgs/art-logo-tag-h-en-rgb-k.png" width="300px" />
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <ul class="social-network social-circle">
                            <li> <a href="https://www.facebook.com/Medtronic/" class="icoFacebook" title="Facebook"> <i class="fa fa-facebook"> </i> </a> </li>
                            <li> <a href="https://x.com/medtronic?lang=en&mx=2" class="icoLinkedin" title="Linkedin"> <i class="fa fa-linkedin"> </i> </a> </li>
                            <li> <a href="https://www.youtube.com/user/medtroniccorp"> <i class="fa fa-youtube" aria-hidden="true"> </i> </a> </li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <!-- Copyright -->
        </footer>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/Home/Login" method="post" class="was-validated">
                <div class="modal-header">
                    <h1 class="modal-title fs-5 w-100 text-center" id="staticBackdropLabel" style="color:brown"><img src="~/imgs/art-logo-rgb-bl.jpg" width="150px"></h1>
                    <button type="button" class="btn-close" onclick="Closebtn()" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3 mt-3">
                        <label for="uname" class="form-label"><b>Username:</b></label>
                        <input type="text" class="form-control" id="uname" placeholder="Enter username" name="uname" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="mb-3">
                        <label for="pwd" class="form-label"><b>Password:</b></label>
                        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pswd" required>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Please fill out this field.</div>
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="myCheck" name="remember" required>
                        <label class="form-check-label" for="myCheck">
                            I agree all statements in Terms of service
                        </label>
                        <div class="valid-feedback">Valid.</div>
                        <div class="invalid-feedback">Check this checkbox to continue.</div>
                            <a asp-action="forgot" asp-controller="home">Forgot password?</a>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="Close" onclick="Closebtn()" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" id="btnlogin" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
    <style>
        footer {
            background: #45526e;
            color: darkblue;
        }

            footer a {
                color: #fff;
                font-size: 14px;
                transition-duration: 0.2s;
            }

                footer a:hover {
                    color: #FA944B;
                    text-decoration: none;
                }

        .copy {
            font-size: 12px;
            padding: 10px;
            border-top: 1px solid #FFFFFF;
        }

        .footer-middle {
            padding-top: 2em;
            color: white;
        }

        ul.social-network {
            list-style: none;
            display: inline;
            margin-left: 0 !important;
            padding: 0;
        }

            ul.social-network li {
                display: inline;
                margin: 0 5px;
            }

        .social-network a.icoFacebook:hover {
            background-color: #3B5998;
        }

        .social-network a.icoLinkedin:hover {
            background-color: #007bb7;
        }

        .social-network a.icoFacebook:hover i {
            color: #fff;
        }

        .social-network a.icoLinkedin:hover i {
            color: #fff;
        }

        .social-network a.socialIcon:hover {
            color: #44BCDD;
        }

        .socialHoverClass {
            color: #44BCDD;
        }

        .social-circle li a {
            display: inline-block;
            position: relative;
            margin: 0 auto 0 auto;
            -moz-border-radius: 50%;
            -webkit-border-radius: 50%;
            border-radius: 50%;
            text-align: center;
            width: 30px;
            height: 30px;
            font-size: 15px;
        }

        .social-circle li i {
            margin: 0;
            line-height: 30px;
            text-align: center;
        }

        .social-circle li a:hover i {
            -moz-transform: rotate(360deg);
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
            -webkit-transition: all 0.2s;
            -moz-transition: all 0.2s;
            -o-transition: all 0.2s;
            transition: all 0.2s;
        }

        .triggeredHover {
            -moz-transform: rotate(360deg);
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
            -webkit-transition: all 0.2s;
            -moz-transition: all 0.2s;
            -o-transition: all 0.2s;
            transition: all 0.2s;
        }

        .social-circle i {
            color: white;
            -webkit-transition: all 0.8s;
            -moz-transition: all 0.8s;
            -o-transition: all 0.8s;
            transition: all 0.8s;
        }

        .social-network a {
            background-color: darkblue;
        }

            .social-network a:hover {
                background: #ff304d;
            }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/toastr/toastr.min.css" rel="stylesheet" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="~/toastr/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
